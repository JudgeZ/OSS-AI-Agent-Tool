{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "module": "ESNext",
    "types": ["svelte"]
  },
  "include": ["src/**/*", "vite.config.ts", "playwright.config.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "src-tauri"]
}
